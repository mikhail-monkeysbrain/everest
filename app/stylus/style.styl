@import "../fonts/raleway.css";
@import "variables.styl";
@import "helpers.styl";
*
	box-sizing border-box
	margin 0
	padding 0
#everest
	/**/
	h1
		color #fff
		font-size 45px
		font-family 'Raleway'
		font-weight 600
		text-transform uppercase
		padding-top 1em
		+media(1024px)
			padding-top 0
		+media(480px)
			font-size 35px
	h2
		color #fff
		font-size 30px
		font-family 'Raleway'
		font-weight 500
		margin 20px 0
		+media(1024px)
			margin 10px 0
	a
		color #fff
		font-size 24px
		font-family 'Raleway'
		font-weight 400
		line-height 3
		+media(1024px)
			line-height 1
		+media(480px)
			font-size 18px
	p
		color #000
		font-size 18px
		font-family 'Raleway'
	/**/
	img
		+media(1024px)
			width 40%
		+media(768px)
			opacity .2
	article
		width 40%
		padding 35px 0
		position relative
		+media(768px)
			width 80%
			margin 0 auto
		&.horizontal
			&::before
				content:""
				display block
				position absolute
				width 2em
				height 90%
				top 20%
				left -2em
				border 2px solid yellow
				border-right 0	
			&::after
				content:""
				display block
				position absolute
				width 2em
				height 90%
				top 20%
				right -2em
				border 2px solid yellow
				border-left 0
		&.vertical
			&._white
				&::before
					border-color white 
				&::after
					border-color white 
			&::before
				content:""
				display block
				position absolute
				width 116%
				height 2em
				top 2em
				left -8%
				border 2px solid yellow
				border-bottom 0		
			&::after
				content:""
				display block
				position absolute
				width 116%
				height 2em
				bottom 0
				left -8%
				border 2px solid yellow
				border-top 0				
	.inner
		width 100%
		max-width 1000px
		margin 0 auto
		position relative
		+media(1024px)
			max-width 680px
	.block1
		min-height 380px
		width 100%
		background url("../img/block1-bg.jpg") no-repeat center
		background-size cover
		+media(1024px)
			min-height 300px
	.block2
		img
			position absolute
			right 5%
			top -390px
			+media(1024px)
				top -170px
				right 0
			+media(768px)
				display none
	.block3, .block10
		min-height 280px
		padding-top 25px
		+media(480px)
			padding-top 0
		article
			width 100%
			+media(768px)
				width 85%
			+media(640px)
				width 80%
	.block4, .block6, .block8
		min-height 330px
		+media(480px)
			padding-top 30px
		article
			left 60%
			+media(1024px)
				left 50%
			+media(768px)
				left 0
		img
			position absolute
			top -45px
			z-index -1
			+media(1024px)
				top 0
	.block5, .block7
		background linear-gradient(to right, #e7a105 0%,#f3b313 50%,#f5c64b 50%,#fecd40 100%)
		min-height 400px
		padding-top 80px
		+media(1024px)
			padding-top 40px
		img
			position absolute
			right 3%
			top -58px
			+media(1024px)
				right 0
				top 0
	.block6
		margin-top 70px
		+media(480px)
			margin-top 30px
			padding-top 0
		article
			width 33%
			+media(1024px)
				width 50%
			+media(1024px)
				width 80%
		img
			z-index 1
	.block7
		padding-top 100px
		background linear-gradient(to right, #fecd40 0%,#f5c64b 50%,#f3b313 50%,#f2b314 50%,#e7a105 100%)
		+media(1024px)
			padding-top 50px
		img
			top -130px
			right 1.5%
			+media(1024px)
				right 0
				top 0
	.block8
		min-height 380px
		padding-top 75px
		+media(1024px)
			padding-top 35px
		img
			top -40px
			left 3%
			+media(1024px)
				right 0
				top 0
			+media(768px)
				left 30%
	.block9
		background linear-gradient(to right, #c3c4c4 0%,#a0a0a0 50%,#b7b7b7 50%,#7a7979 100%)
		+media(768px)
			background linear-gradient(to right, #c3c4c4 0%, #a0a0a0 25%, #b7b7b7 75%, #7a7979 100%)
		article
			left 60%
			+media(768px)
				width 80%
				left 10%
			p
				line-height 1.3
		img
			position absolute
			top 50px
			left 1em
			+media(768px)
				opacity .1
				width 80%
				left 10%
	.block10
		+media(480px)
			padding-top 0
			margin-bottom 65px
	.block11
		min-height 290px
		background url("../img/section5-bg.jpg") no-repeat center
		background-size cover